
<h1>Tipo Pagos</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_pagos.each do |tipo_pago| %>
      <tr>
        <td><%= tipo_pago.descripcion %></td>
        <td><%= tipo_pago.estatus %></td>
        <td><%= link_to 'Show', tipo_pago %></td>
        <td><%= link_to 'Edit', edit_tipo_pago_path(tipo_pago) %></td>
        <td><%= link_to 'Destroy', tipo_pago, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el tipo de pago?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tipo Pago', new_tipo_pago_path %>
