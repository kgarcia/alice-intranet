<p id="notice"><%= notice %></p>

<div class="ibox-title">
    <h5>Basic Data Tables example with responsive plugin</h5>
</div>
<div class="ibox-content">
<%= link_to 'Nuevo Sexo', new_sexo_path , :class => "btn btn-primary btn-sm fa fa-plus" %>
 <br><br>

    <input type="text" class="form-control input-sm m-b-xs" id="filter"
                       placeholder="Search in table"> 
<table class="footable table table-stripped toggle-arrow-tiny" data-page-size="2">
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sexos.each do |sexo| %>
      <tr>
        <td><%= sexo.descripcion %></td>
        <td><%= sexo.estatus %></td>
        <td><%= link_to '', edit_sexo_path(sexo),:class => "btn btn-warning btn-sm fa fa-pencil" %>
       <%= link_to '', sexo, method: :delete, data: { confirm: '¿Estás seguro?' },:class => "btn btn-danger btn-sm fa fa-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
<br>


