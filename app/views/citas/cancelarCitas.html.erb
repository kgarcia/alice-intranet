<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="ibox-content">
      <%= form_for @eventualidad, :url => '/cancelar_cita', :html => {:class => 'form-horizontal'} do |f| %>
          <% if @eventualidad.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@eventualidad.errors.count, "error") %> prohibited this parametro from being
                  saved:</h2>

                <ul>
                  <% @eventualidad.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>

          <% end %>

          <div class="field form-group">
            <label class="col-lg-2 control-label">Motivo</label>
            <div class="col-lg-10"><%= f.collection_select(:motivo_id, @collection_motivo, :id, :descripcion, {}, :class => "form-control") %></div>
          </div>

          <div class="form-group"><label class="col-lg-2 control-label">Descripci√≥n</label>
            <div class="col-lg-10"><%= f.text_field :descripcion, :class => "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <%= f.submit 'Guardar', :class => "btn btn-sm btn-white" %>
            </div>
          </div>
          <%= hidden_field_tag :cita_id, @cita.id %>
      <% end %>
    </div>
  </div>
</div>


