<p id="notice"><%= notice %></p>

<h1>Ocupaciones</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ocupaciones.each do |ocupacion| %>
      <tr>
        <td><%= ocupacion.descripcion %></td>
        <td><%= ocupacion.estatus %></td>
        <td><%= link_to 'Show', ocupacion %></td>
        <td><%= link_to 'Edit', edit_ocupacion_path(ocupacion) %></td>
        <td><%= link_to 'Destroy', ocupacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

