<br>
<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h2 class="parametros-titulo"><%= "Preguntas" %></h2>
  </div>
</div>
<div class="ibox-content">
<%= link_to 'Registrar', new_pregunta_path, :class => "btn btn-primary btn-sm" %>
 <br><br> 
 <table class="footable table table-stripped" data-sorting="true" data-filtering="true">
    <thead>
      <tr>
        <th data-breakpoints="xs" data-sorted="true">Tipo de pregunta</th>
        <th>Descripción</th>
        <th>Respuesta</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
        <% @preguntas.each do |pregunta| %>
          <tr>
            <td><%= pregunta.tipo_pregunta.descripcion %></td>
            <td><%= pregunta.descripcion %></td>
            <td><%= pregunta.respuesta %></td>
            <td><%= link_to 'Editar', edit_polymorphic_url(pregunta), :class => "btn btn-warning btn-sm" %></td>
            <td><%= link_to 'Eliminar', pregunta, method: :delete, data: { confirm: '¿Está seguro que desea eliminar la pregunta?' } %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
            <td colspan="5">
                <ul class="pagination pull-right"></ul>
            </td>
        </tr>
      </tfoot>
  </table>
</div>
<br>


<script type="text/javascript">
  $(document).ready(function(){
  $('.table').footable();
});


</script>


