<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
   <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h2 class="parametros-titulo"><%= "Eventualidad" %></h2>
              </div>
          </div>
    <div class="ibox-content">
      <%= form_for @eventualidad, :html => {:class => 'form-horizontal'} do |f| %>
          <% if @eventualidad.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@eventualidad.errors.count, "error") %> prohibited this parametro from being
                  saved:</h2>

                <ul>
                  <% @eventualidad.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="field form-group">
            <label class="col-lg-2 control-label">Tipo de Eventualidad</label>
            <div class="col-lg-10"><%= f.collection_select(@referencia_tipo, @collection_tipo, :id, :descripcion, {}, :class => "form-control") %></div>
          </div>
          
          <div class="field form-group">
            <label class="col-lg-2 control-label">Motivo</label>
            <div class="col-lg-10"><%= f.collection_select(@referencia_motivo, @collection_motivo, :id, :descripcion, {}, :class => "form-control") %></div>
          </div>

          <div class="form-group"><label class="col-lg-2 control-label">Descripci√≥n</label>
            <div class="col-lg-10"><%= f.text_field :descripcion, :class => "form-control" %>
            </div>
          </div>

          <div class="form-group"><label class="col-lg-2 control-label">Fecha inicio</label>
            <div class="col-lg-10"><%= f.datetime_select :fecha_inicio %>
            </div>
          </div>

          <div class="form-group"><label class="col-lg-2 control-label">Fecha fin</label>
            <div class="col-lg-10"><%= f.datetime_select :fecha_fin %>
            </div>
          </div>


          <div class="form-group">
                      <div class="col-lg-offset-3 col-lg-2">
                           <%= f.submit "Guardar", :class => "btn btn-primary" %>
                      </div>
                        <div class="col-lg-2">
                        <%= link_to 'Limpiar', '', type: :reset, :class => "btn btn-sm btn-warning " %>                          
                        </div>
                      <div class="col-lg-2">
                      <%= link_to 'Atras',eventualidades_path, :class => "btn btn-sm btn-success" %>                          
                      </div>
                  </div>
                  
      <% end %>
    </div>
  </div>
</div>


