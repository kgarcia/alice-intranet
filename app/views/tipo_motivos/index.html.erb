
<h1>Tipo Motivos</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_motivos.each do |tipo_motivo| %>
      <tr>
        <td><%= tipo_motivo.descripcion %></td>
        <td><%= tipo_motivo.estatus %></td>
        <td><%= link_to 'Show', tipo_motivo %></td>
        <td><%= link_to 'Edit', edit_tipo_motivo_path(tipo_motivo) %></td>
        <td><%= link_to 'Destroy', tipo_motivo, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el tipo de motivo?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tipo Motivo', new_tipo_motivo_path %>
