
<h1>Tipo Opiniones</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_opiniones.each do |tipo_opinion| %>
      <tr>
        <td><%= tipo_opinion.descripcion %></td>
        <td><%= tipo_opinion.estatus %></td>
        <td><%= link_to 'Show', tipo_opinion %></td>
        <td><%= link_to 'Edit', edit_tipo_opinion_path(tipo_opinion) %></td>
        <td><%= link_to 'Destroy', tipo_opinion, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el tipo de opinion?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tipo Opinion', new_tipo_opinion_path %>
