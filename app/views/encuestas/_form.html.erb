<div class="row">   
   <div class="col-lg-6 col-lg-offset-3">
      <div class="ibox float-e-margins">
          <div class="ibox-title">
              <h2 class="parametros-titulo"><%= @evaluacion.class.titulo %></h2>
          </div>
      </div>
      <div class="ibox-content">
         <%= form_for @evaluacion, :html => {:class => 'form-horizontal'} do |f| %>
              <% if @evaluacion.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@evaluacion.errors.count, "error") %> prohibited this evaluacion from being saved:</h2>
                  <ul>
                  <% @evaluacion.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              Calificaciones:
              <ul>
                <%= f.fields_for :calificaciones do |calificaciones_form| %>
                  <li>
                    <%= calificaciones_form.label "hola" %>
                    <%= calificaciones_form.hidden_field :id %>
                    <%= calificaciones_form.hidden_field :criterio_id %>
                    Calificacion:
                    <%= calificaciones_form.text_field :descripcion %>                    
                  </li>
                <% end %>
              </ul>
              
              <div class="form-group">
                <div class="col-lg-offset-3 col-lg-2">
                    <%= button_tag( :class => "btn btn-primary", :title => "Guardar") do %>
                      <span class="fa fa-check"></span>
                    <% end %>
                </div>
                <% if (@evaluacion.new_record?) %>
                  <div class="col-lg-2">
                  <%= link_to '', '', type: :reset, :class => "btn btn-sm btn-warning fa fa-recycle", :title => "Limpiar"  %>                          
                  </div>
                <% end %>
                <div class="col-lg-2">
                <%= link_to '', polymorphic_url(@evaluacion.class), :class => "btn btn-sm btn-success fa fa-undo", :title => "Atras" %>
                </div>
              </div>
          <% end %>
      </div>
  </div>
</div>
