

<%= csrf_meta_tag %>
<p id="notice"><%= notice %></p>

<div class="ibox-content">
<%= link_to link_to 'Turno', new_turno_path , :class => "btn btn-primary btn-sm fa fa-plus" %>
 <br><br> 
 <table class="footable table table-stripped" data-sorting="true" data-filtering="true">
    <thead>
      <tr>
        <th>Descripcion</th>
        <th>Hora Inicio</th>
        <th>Hora Fin</th>
        <th>Estatus</th>
        <th>Día</th>
        <th>Dr/Servicio</th>
        <th data-breakpoints="xs">Tipo</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @turnos.each do |turno| %>
          <tr>
           <td><%= turno.descripcion %></td>
        <td><%= turno.hora_inicio.strftime("%H:%M") %></td>
        <td><%= turno.hora_fin.strftime("%H:%M") %></td>
        <td><%= turno.estatus %></td>
        <td><%= turno.tipodia.descripcion %></td>
        <td><%= turno.horario.descripcion %></td>
            <td>
             <%= link_to '', edit_polymorphic_url(turno), :class => "btn btn-warning btn-sm fa fa-pencil" %>
             <%= link_to '', turno, :method => :delete, data: { confirm: '¿Estás seguro?' } , :class => "btn btn-danger btn-sm fa fa-trash" %></td>
          </tr>
      <% end %>
    </tbody>
      <tfoot>
                    <tr>
                        <td colspan="5">
                            <ul class="pagination pull-right"></ul>
                        </td>
                    </tr>
                    </tfoot>
  </table>
</div>
<br>


<script type="text/javascript">
$(document).ready(function(){
$('.table').footable();
});

</script>


