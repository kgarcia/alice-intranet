<div class="row">   
   <div class="col-lg-10 col-lg-offset-1">
   <div class="ibox float-e-margins">
          <div class="ibox-title">
                  <h2 class="parametros-titulo"><%= "Servicio" %></h2>
              </div>
              </div>
          <div class="ibox-content">
             <%= form_for @servicio, :html => {:class => 'form-horizontal', :multipart => true } do |f| %>

                    <div class="field form-group">
                      <label class="col-lg-2 control-label">Tipo de Servicio</label>
                      <div class="col-lg-10">
                        <%= f.collection_select(:tipo_servicio_id, @tipo_servicios, :id, :descripcion, {},{:class => "form-control"}) %>
                      </div>
                      
                    </div>

                    <div class="field form-group">
                      <label class="col-lg-2 control-label">Especialista</label>
                      <div class="col-lg-10">
                        <%= f.collection_select(:especialista_id, @especialistas, :id, :nombre, {},{:class => "form-control"}) %>
                      </div>
                      
                    </div>

                    <div class="field form-group">
                      <label class="col-lg-2 control-label">Ubicacion</label>
                      <div class="col-lg-10">
                        <%= f.collection_select(:ubicacion_id, @ubicaciones, :id, :descripcion, {},{:class => "form-control"}) %>
                      </div>
                      
                    </div>  

                    <div class="form-group">
                      <label class="col-lg-2 control-label">Descripcion</label>

                      <div class="col-lg-10"><%= f.text_field :descripcion, :class => "form-control", :required => true %>
                       </div>
                    </div>

                    <div class="form-group"><label class="col-lg-2 control-label">Precio</label>

                        <div class="col-lg-10"><%= f.number_field :precio, :class => "form-control", :required => true %>
                        </div>
                    </div>

                   <div class="form-group">
                      <label class="col-lg-2 control-label">Foto</label>

                      <div class="col-lg-10"><%= f.file_field :foto, :class => "form-control" %>
                       </div>
                    </div>

                

          
              <div class="form-group">
                      <div class="col-lg-offset-3 col-lg-2">
                           <%= f.submit "Guardar", :class => "btn btn-sm btn-primary" %>
                      </div>
                        <div class="col-lg-2">
                        <%= link_to 'Limpiar', '', type: :reset, :class => "btn btn-sm btn-warning " %>                          
                        </div>
                      <div class="col-lg-2">
                      <%= link_to 'Atras',eventualidades_path, :class => "btn btn-sm btn-success" %>                          
                      </div>
                  </div>
                  </div>
          <% end %>
          </div>
  </div>
