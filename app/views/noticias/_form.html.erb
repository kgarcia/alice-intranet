<div class="row">   
   <div class="col-lg-6 col-lg-offset-3">
   <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h2 class="parametros-titulo"><%= "Noticia" %></h2>
              </div>
          </div>
          <div class="ibox-content">
          <%= form_for @noticia, :html => {:class => 'form-horizontal'} do |f| %>
            <% if noticia.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(noticia.errors.count, "error") %> prohibited this noticia from being saved:</h2>

                <ul>
                <% noticia.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
              <div class="field form-group">
                    <label class="col-lg-2 control-label">Tipo Noticia</label>
                     <div class="col-lg-10">
                      <%= f.collection_select(:tipo_noticia_id, @tipoNoticias, :id, :descripcion, {:prompt => "Seleccione"}, {:class => "form-control"}) %>
                    </div>
              </div>

                  <div class="form-group">
                  <label class="col-lg-2 control-label">Título</label>

                      <div class="col-lg-10"><%= f.text_field :titulo, :class => "form-control" %>
                       </div>
                    </div>
                    <div class="form-group"><label class="col-lg-2 control-label">Descripción</label>

                      <div class="col-lg-10"><%= f.text_field :descripcion, :class => "form-control" %>
                       </div>
                    </div>

                   
                  <div class="form-group">
                    <label class="col-lg-2 control-label">Texto</label>

                    <div class="col-lg-10"><%= f.text_area :contenido, :class => "tinymce form-control" %>
                     </div>

                    <%= tinymce :language => "es_MX" %>
                  </div>

                 <div class="form-group">
                      <div class="col-lg-offset-3 col-lg-2">
                           <%= f.submit "Guardar", :class => "btn btn-sm btn-primary" %>
                      </div>
                        <div class="col-lg-2">
                        <%= link_to 'Limpiar', '', type: :reset, :class => "btn btn-sm btn-warning " %>                          
                        </div>
                      <div class="col-lg-2">
                      <%= link_to 'Atras',noticias_path, :class => "btn btn-sm btn-success" %>                          
                      </div>
                  </div>
  <% end %>
    </div>
  </div>
</div>