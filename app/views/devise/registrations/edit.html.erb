<br>



<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h2 class="parametros-titulo"><%= "Mi Perfil" %></h2>
      </div>

    </div>

    <div class="ibox-content">

      <ul class="nav nav-tabs">
         <li><a data-toggle="tab" href="#texto">Cuenta</a></li>
      </ul>

      <div class="tab-content">

        <div id="texto" class="tab-pane fade in active">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
              <%= devise_error_messages! %>

              <br>

              <div class="form-group row"><label class="col-lg-2 control-label">Correo</label>
                <div class="col-lg-10"><%= f.text_field :email, :class => "form-control" %>
                </div>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>
                    <%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %>
                  </p>
              <% end %>


              <div class="form-group row"><label class="col-lg-2 control-label">Contraseña</label>

                <div class="col-lg-10"><%= f.password_field :password, :class => "form-control", autocomplete: "off" %>
                </div>

              </div>

              <div class="form-group row"><label class="col-lg-2 control-label">Confirme contraseña</label>
                <div class="col-lg-10"><%= f.password_field :password_confirmation, :class => "form-control", autocomplete: "off" %>

                </div>
              </div>

              <div class="form-group row"><label class="col-lg-2 control-label">Última contraseña</label>
                <div class="col-lg-10"><%= f.password_field :current_password, :class => "form-control", autocomplete: "off" %>

                </div>
              </div>


              <div class="form-group row">
                <div class="col-lg-offset-3 col-lg-2">
                  <%= f.submit t('.update'), :class => "btn btn-sm  btn-primary" %>
                </div>


              </div>


              </div> <!--div del tab pane -->


          <% end %>

          </div> <!--div del tab  content -->

    </div>

  </div>
</div>




