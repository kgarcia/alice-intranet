<div class="row">   
   <div class="col-lg-6 col-lg-offset-3">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h2 class="parametros-titulo"><%= rango_peso.class.titulo %></h2>
              </div>
          </div>
          <div class="ibox-content">
             <%= form_for rango_peso, :html => {:class => 'form-horizontal'} do |f| %>
                  <% if rango_peso.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(rango_peso.errors.count, "error") %> prohibited this parametro from being saved:</h2>

                      <ul>
                      <% rango_peso.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>

                  <div class="form-group"><label class="col-lg-2 control-label">Descripcion</label>

                      <div class="col-lg-10"><%= f.text_field :descripcion, :class => "form-control" %>
                       </div>
                   </div>

                  <div class="form-group"><label class="col-lg-2 control-label">Peso Inicial</label>

                      <div class="col-lg-10"><%= f.number_field :peso_inicial, :class => "form-control" %>
                       </div>
                  </div>

                  <div class="form-group"><label class="col-lg-2 control-label">Peso Final</label>

                      <div class="col-lg-10"><%= f.number_field :peso_final, :class => "form-control" %>
                       </div>
                  </div>                  

                 
                    <div class="form-group">
                      <div class="col-lg-offset-3 col-lg-2">
                           <%= f.submit "Guardar", :class => "btn btn-primary" %>
                      </div>
                        <div class="col-lg-2">
                        <%= link_to 'Limpiar', '', type: :reset, :class => "btn btn-sm btn-warning " %>                          
                        </div>
                      <div class="col-lg-2">
                      <%= link_to 'Atras',rango_pesos_path, :class => "btn btn-sm btn-success" %>                          
                      </div>
                  </div>

              <% end %>
          </div>
  </div>
</div>
