
<h1>Tipo Difusiones</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_difusiones.each do |tipo_difusion| %>
      <tr>
        <td><%= tipo_difusion.descripcion %></td>
        <td><%= tipo_difusion.estatus %></td>
        <td><%= link_to 'Show', tipo_difusion %></td>
        <td><%= link_to 'Edit', edit_tipo_difusion_path(tipo_difusion) %></td>
        <td><%= link_to 'Destroy', tipo_difusion, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el tipo de difusion?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

