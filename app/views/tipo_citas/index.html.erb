
<h1>Tipo Citas</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_citas.each do |tipo_cita| %>
      <tr>
        <td><%= tipo_cita.descripcion %></td>
        <td><%= tipo_cita.estatus %></td>
        <td><%= link_to 'Show', tipo_cita %></td>
        <td><%= link_to 'Edit', edit_tipo_cita_path(tipo_cita) %></td>
        <td><%= link_to 'Destroy', tipo_cita, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el tipo de cita?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tipo Cita', new_tipo_cita_path %>
