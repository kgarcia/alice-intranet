
<h1>Tipo Cirugias</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_cirugias.each do |tipo_cirugia| %>
      <tr>
        <td><%= tipo_cirugia.descripcion %></td>
        <td><%= tipo_cirugia.estatus %></td>
        <td><%= link_to 'Show', tipo_cirugia %></td>
        <td><%= link_to 'Edit', edit_tipo_cirugia_path(tipo_cirugia) %></td>
        <td><%= link_to 'Destroy', tipo_cirugia, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el tipo de cirugia?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tipo Cirugia', new_tipo_cirugia_path %>
